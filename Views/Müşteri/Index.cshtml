@using MvcStok.Models.Entity
@model List<M_Table_1>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<table class="table table-bordered">
    <tr>
        <th>Müşteri ID</th>
        <th>Müşteri Adı</th>
        <th>Müşteri oyadı</th>

    </tr>
    <tbody>
        @foreach (var mstr in Model)
        {
            <tr>
                <td>@mstr.MUSTERIID</td>
                <td>@mstr.MUSTERIAD</td>
                <td>@mstr.MUSTERISOYAD</td>
                <td><a href="/Müşteri/SIL/@mstr.MUSTERIID" class="btn btn-danger">SİL</a></td>
                <td><a href="/Müşteri/MusteriGetir/@mstr.MUSTERIID" class="btn btn-success">GÜNCELLE</td>
            </tr>

        }
    </tbody>
</table>
<a href="/Müşteri/YeniMusteri/" class="btn btn-primary">YENİ MÜŞTERİ EKLE</a>




