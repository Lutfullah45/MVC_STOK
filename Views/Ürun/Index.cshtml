@using MvcStok.Models.Entity
@model List<U_Table_1>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<table class="table table-bordered">
    <tr>
        <th>Urun ID</th>
        <th>Urun Adı</th>
        <th>Markası</th>
        <th>Kategorisi</th>
        <th>Fiyat</th>
        <th>Stok</th>
    </tr>
    <tbody>
        @foreach (var urn in Model)
        {
            <tr>
                <td>@urn.URUNID</td>
                <td>@urn.URUNAD</td>
                <td>@urn.MARKA</td>
                <td>@urn.S_Table_1.KATAGORIAD</td>
                <td>@urn.STOK</td>
                <td>@urn.FİYAT</td>
                <td><a href="/Ürun/SIL/@urn.URUNID" class="btn btn-danger">SİL</a></td>
                <td><a href="/Ürun/Guncelle/@urn.URUNID" class="btn btn-success">GÜNCELLE</a></td>

            </tr>

        }
    </tbody>
</table>
<a href="/Ürun/UrunEkle" class="btn btn-primary">YENİ ÜRÜN EKLE</a>

